<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.superuser.loginform.MainActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="LOGIN"
        android:textStyle="normal|bold"
        android:id="@+id/loginid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:background="?android:attr/colorFocusedHighlight" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/edituname"
        android:layout_marginTop="34dp"
        android:hint="enter username"
        android:layout_below="@+id/loginid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="?attr/actionMenuTextColor"
        android:textColorHint="@color/colorAccent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/name"
        android:text="username"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignTop="@+id/edituname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textAlignment="center" />

    <TextView
        android:layout_height="30dp"
        android:id="@+id/passwdid"
        android:text="password"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/edituname"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editpass"
        android:hint="enter password"
        android:layout_width="200dp"
        android:layout_above="@+id/loginbtnid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:textColor="?attr/actionMenuTextColor"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/cancelbtnid"
        android:layout_width="100dp"
        android:background="@drawable/cancelbtn"
        android:layout_below="@+id/loginbtnid"
        android:layout_alignLeft="@+id/loginid"
        android:layout_alignStart="@+id/loginid"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="100dp"
        android:layout_marginTop="67dp"
        android:id="@+id/loginbtnid"
        android:background="@drawable/button"
        android:layout_height="40dp"
        android:layout_below="@+id/passwdid"
        android:layout_alignLeft="@+id/cancelbtnid"
        android:layout_alignStart="@+id/cancelbtnid" />


</RelativeLayout>
